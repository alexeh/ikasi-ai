/**
 * @file Firestore Security Rules
 * @description This ruleset provides open access to all data for prototyping purposes, effectively disabling security measures.
 *
 * Core Philosophy: All read and write operations are allowed for all users, authenticated or not. This is NOT a secure configuration and should only be used for initial development and prototyping.
 *
 * Data Structure: The database contains collections for sync logs, admin reviews, admins, admin roles, reading documents, mental math games, and math word problem games.
 *
 * Key Security Decisions: All security measures have been disabled.
 *
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any user to read, create, update, or delete sync logs.
     * @path /sync_logs/{syncLogId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /sync_logs/{syncLogId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete admin reviews.
     * @path /admin_reviews/{adminReviewId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /admin_reviews/{adminReviewId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete admin profiles.
     * @path /admins/{adminId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /admins/{adminId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete admin roles.
     * @path /roles_admin/{adminId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /roles_admin/{adminId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete reading documents.
     * @path /readingDocuments/{documentId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /readingDocuments/{documentId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete mental math game results.
     * @path /mentalMathGames/{gameId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /mentalMathGames/{gameId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }

    /**
     * @description Allows any user to read, create, update, or delete math word problem game results.
     * @path /mathWordProblemGames/{gameId}
     * @allow (get, list, create, update, delete)
     * @principle Disables all security for rapid prototyping.
     */
    match /mathWordProblemGames/{gameId} {
      allow get, list: if true;
      allow create, update, delete: if true;
    }
  }
}